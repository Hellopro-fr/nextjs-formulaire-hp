# API Configuration
NEXT_PUBLIC_API_BASE_URL=/api

# Base Path pour le déploiement (ex: /formulaire)
# Doit correspondre à basePath dans next.config.js
NEXT_PUBLIC_BASE_PATH=/formulaire

# URL de base pour les assets en production (domaine complet)
# Ex: https://dev-www.hellopro.fr ou https://www.hellopro.fr
# Laisser vide en local pour utiliser des chemins relatifs
NEXT_PUBLIC_ASSET_BASE_URL=https://dev-www.hellopro.fr

# Demande d'information - Endpoint PHP HelloPro
# URL du fichier PHP qui gère l'insertion des demandes
DEMANDE_INFO_URL=https://dev-www.hellopro.fr/include/demande_information/demande_info_insertion.php

# Google Analytics 4
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Hotjar
NEXT_PUBLIC_HOTJAR_ID=1234567
NEXT_PUBLIC_HOTJAR_SV=6

# Category Token Security
# Secret pour signer les tokens de catégorie (HMAC-SHA256)
# IMPORTANT: Changer cette valeur en production avec une clé aléatoire de 32+ caractères
CATEGORY_TOKEN_SECRET=hellofr2k26

# URL de redirection pour les tokens invalides/expirés
# Rediriger vers la page des catégories HelloPro
INVALID_TOKEN_REDIRECT_URL=https://www.hellopro.fr/categories
